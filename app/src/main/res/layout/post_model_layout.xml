<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CFD8DC">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CFD8DC">
            <include layout="@layout/post_user_options"
                android:id="@+id/user_details_layout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <include layout="@layout/post_user_text"
                android:id="@+id/user_text_details"
                android:layout_marginTop="1dp"
                android:layout_below="@id/user_details_layout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <include layout="@layout/post_layout"
                android:id="@+id/user_image_details"
                android:layout_below="@id/user_text_details"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <include layout="@layout/comm_layout"
                android:layout_below="@id/user_image_details"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>